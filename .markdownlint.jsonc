{
  // Global markdown linting configuration for claude-simone
  // This config applies to all markdown files in the repository

  "config": {
    "default": true,

    // Disabled rules with explanations:
    "MD001": false,  // Heading levels increment - legacy docs have irregular structure
    "MD013": false,  // Line length - prompts and docs can have long lines
    "MD024": {       // No duplicate headings at same level (but allow in different sections)
      "siblings_only": true
    },
    "MD025": false,  // Multiple top-level headings - templates need this
    "MD033": false,  // HTML allowed - useful for details/summary
    "MD036": false,  // Emphasis instead of heading - legacy command style
    "MD040": false,  // Code blocks need language - too many legacy blocks without
    "MD041": false   // First line doesn't need to be heading
  },

  // Ignore patterns
  "ignores": [
    "node_modules",
    "**/node_modules",
    ".worktrees/**"
  ]
}
